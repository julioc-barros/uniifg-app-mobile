<Tela_Menu_At_Agendamento>
    name: 'tela_menu_atendimento_at_agendamento'

    FloatLayout:
        Image:
            source: 'Images/UNIFG.png'
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.94}

        Image:
            source: 'Images/background.png'
            size_hint: (1.5, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}

        MDLabel: 
            text: 'AGENDAMENTO'
            color: 255/255, 255/255, 255/255, 1
            font_size: 30
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            size_hint: (0.8, 1)

        MDLabel: 
            text: 'Neste momento de isolamento social, a Central de Atendimento ao Aluno está com alguns  serviços para atendimento presencial, mas o aluno deverá acessar o autoatendimento e realizar agendamento, segue guia do aluno com o passo a passo: https://unifg.edu.br/guia-do-aluno/. Caso o assunto que deseja tratar não esteja disponível, basta digitar "Falar com atendente", que breve seu atendimento será encaminhado para nossa equipe".'
            color: 255/255, 255/255, 255/255, 1
            font_size: 20
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.48}
            size_hint: (0.8, 1)

        MDRaisedButton: 
            id: 'voltar'
            text: 'Voltar'
            font_size: 21
            text_color: (0,0,0,1)
            md_bg_color: (1,1,1,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.14}
            size_hint: (0.25, 0.047)
            on_press: root.voltar()
