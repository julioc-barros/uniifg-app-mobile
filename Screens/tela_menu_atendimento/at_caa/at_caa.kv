<Tela_Menu_At_CAA>
    name: 'tela_menu_atendimento_at_caa'

    FloatLayout:
        Image:
            source: 'Images/UNIFG.png'
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.94}

        Image:
            source: 'Images/background.png'
            size_hint: (1.5, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}

        MDLabel: 
            text: 'CAA'
            color: 255/255, 255/255, 255/255, 1
            font_size: 30
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            size_hint: (0.8, 1)

        MDLabel: 
            text: 'Você pode entrar em contato com a CAA através deste canal ao digitar Falar com atendente* ou pelo nosso atendimento via WhatsApp pelo número +55 81 3461-5556, basta acessar:'
            color: 255/255, 255/255, 255/255, 1
            font_size: 25
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            size_hint: (0.8, 1)

        MDRaisedButton: 
            text: 'Link para Whatsapp'
            font_size: 21
            text_color: (1,1,1,1)
            md_bg_color: (0/255, 146/255, 70/255, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            size_hint: (0.6, 0.065)
            on_press: root.whatsapp()

        MDRaisedButton: 
            id: 'voltar'
            text: 'Voltar'
            font_size: 21
            text_color: (0,0,0,1)
            md_bg_color: (1,1,1,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.14}
            size_hint: (0.25, 0.047)
            on_press: root.voltar()
