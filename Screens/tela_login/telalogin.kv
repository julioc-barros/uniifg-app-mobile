<TelaLogin>
    name: 'login'

    FloatLayout:

        Image:
            source: 'Images/UNIFG.png'
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.94}

        Image:
            source: 'Images/background.png'
            size_hint: (1.5, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.38}

        MDLabel: 
            text: 'Login'
            color: (233/255, 129/255, 57/255, 1)
            font_size: 40
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.78}
            size_hint: (0.8, 1)
        
        MDLabel: 
            text: 'Usu√°rio:'
            color: (1,1,1,1)
            font_size: 18
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.2, 'center_y': 0.65}
        
        MDTextField:
            id: 'user'
            mode: "rectangle"
            hint_text: ' '
            hint_text_color_normal: (1,1,1,1)
            write_tab: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.59}
            size_hint_x: .8

        MDLabel: 
            text: 'Senha:'
            color: (1,1,1,1)
            font_size: 18
            bold: True
            halign: 'center'
            pos_hint: {'center_x': 0.18, 'center_y': 0.5}

        MDTextField:
            id: 'password'
            mode: "rectangle"
            hint_text: ' '
            hint_text_color_normal: (1,1,1,1)
            password: True
            write_tab: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.44}
            size_hint_x: .8
            on_text_validate:
                root.auth()

        MDRaisedButton: 
            id: 'acessar'
            text: 'Acessar'
            font_size: 22
            text_color: (1,1,1,1)
            md_bg_color: (233/255, 129/255, 57/255, 1)
            size_hint: (0.7, 0.085)
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
            on_press: root.auth()

        MDRaisedButton: 
            id: 'voltar'
            text: 'Voltar'
            font_size: 22
            text_color: (0,0,0,1)
            md_bg_color: (1,1,1,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.16}
            size_hint: (0.3, 0.07)
            on_press: root.voltar()